#!/usr/bin/env python
#encoding: utf8
import rospy, os, socket, sys

class JuliusReceiver:
	def __init__(self): 
		rate = rospy.Rate(10)
		while not rospy.is_shutdown():
			try:
				self.sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
				self.sock.connect(("localhost", 10500))
				break
			except:
				rate.sleep()

		rospy.on_shutdown(self.sock.close)

	def get_line(self):
		line =""
		while not rospy.is_shutdown():
			v = self.sock.recv(1)
			if v == '\n':
				return line
			line += v

	"""def get_WHYPO_line(self):
		line = self.get_line()
		if "WHYPO WORD" not in line:
			return None
		else:
			return line"""

	def get_word(self):
		line = self.get_line()
		if "WHYPO WORD" in line:
			word = line.split('<WHYPO WORD="')[-1].split('"')[0]
			if word.find('<') == -1 and word!= '。' and word!='、' and word!=' ':
				return word

 
if __name__ == '__main__':
	rospy.init_node("voice_to_command")
	j = JuliusReceiver()

	while not rospy.is_shutdown():
		"""word = j.get_WHYPO_line()"""
		word = j.get_word()
